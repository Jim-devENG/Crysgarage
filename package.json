{
  "name": "crys-garage",
  "version": "1.0.0",
  "description": "Professional Audio Mastering Application",
  "scripts": {
    "start-all": "powershell -ExecutionPolicy Bypass -File start_all_servers.ps1",
    "start-all-bat": "start_all_servers.bat",
    "start-frontend": "cd crysgarage-frontend && npm run dev",
    "start-backend": "cd crysgarage-ruby && bundle install && rails server -p 3000",
    "install-all": "npm install && cd crysgarage-frontend && npm install && cd ../crysgarage-ruby && bundle install",
    "build": "cd crysgarage-frontend && npm run build",
    "dev": "concurrently \"npm run start-frontend\" \"npm run start-backend\""
  },
  "dependencies": {
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
